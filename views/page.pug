extends layout

block content
  a(href="/") back
  
  div(class="w3-mobile")
    div(class="w3-animate-opacity" id="login-form")
      form(class="w3-display-middle login-form" action="/login" method="POST")
        h1 Login
        img(src="/static/icons/noun-flash-cards-4767.png" alt="logo")
        div(class="w3-margin")
          label(for="Email") Email address
          input(type="email" class="w3-input sizing" id="Email" aria-describedby="emailHelp" name="email")
          small(id="emailHelp" class="small-tag") *We'll never share your email with anyone else.
        div(class="w3-margin")
          label(for="exampleInputPassword1") Password
          input(type="password" class="w3-input sizing" id="exampleInputPassword1" name="pass")
        div
          input(type="submit" class="w3-button btn btn-register" value="Login")
          